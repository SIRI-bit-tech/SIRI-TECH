# Database
DATABASE_URL="postgresql://username:password@localhost:5432/portfolio_db"
# For production, use connection pooling:
# DATABASE_URL="postgresql://username:password@host:5432/portfolio_db?pgbouncer=true&connection_limit=1"

# Authentication
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"
# Production: NEXTAUTH_URL="https://yourdomain.com"

# UploadThing
UPLOADTHING_SECRET="your-uploadthing-secret"
UPLOADTHING_APP_ID="your-uploadthing-app-id"

# Email (Resend)
RESEND_API_KEY="your-resend-api-key"
FROM_EMAIL="noreply@yourdomain.com"
TO_EMAIL="your-email@yourdomain.com"

# Admin Credentials (for initial setup)
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="your-secure-password"

# Production Environment
NODE_ENV="development"
# Production: NODE_ENV="production"

# Analytics & Monitoring
VERCEL_ANALYTICS_ID=""
# Optional: Enable Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS="false"

# Security
ALLOWED_ORIGINS="http://localhost:3000"
# Production: ALLOWED_ORIGINS="https://yourdomain.com"

# Rate Limiting
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""
# Optional: For advanced rate limiting in production

# Logging
LOG_LEVEL="info"
# Production: LOG_LEVEL="error"